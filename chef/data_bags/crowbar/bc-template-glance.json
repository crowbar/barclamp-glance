{
  "id": "bc-template-glance",
  "description": "Glance service (image registry and delivery service) for the cloud",
  "attributes": {
    "glance": {
      "images": [
        "http://|ADMINWEB|/files/ami/ubuntu-12.04-server-cloudimg-amd64.tar.gz"
      ],
      "api": {
        "verbose": false,
        "debug": false,
        "bind_open_address": false,
        "bind_port": 9292,
        "log_file": "/var/log/glance/api.log",
        "config_file": "/etc/glance/glance-api.conf",
        "paste_ini": "/etc/glance/glance-api-paste.ini"
      },
      "registry": {
        "verbose": false,
        "debug": false,
        "bind_open_address": false,
        "bind_port": 9191,
        "log_file": "/var/log/glance/registry.log",
        "config_file": "/etc/glance/glance-registry.conf",
        "paste_ini": "/etc/glance/glance-registry-paste.ini"
      },
      "prefetcher": {
        "verbose": false,
        "debug": false,
        "log_file": "/var/log/glance/prefetcher.log",
        "config_file": "/etc/glance/glance-prefetcher.conf"
      },
      "pruner": {
        "verbose": false,
        "debug": false,
        "log_file": "/var/log/glance/pruner.log",
        "config_file": "/etc/glance/glance-pruner.conf"
      },
      "reaper": {
        "verbose": false,
        "debug": false,
        "log_file": "/var/log/glance/reaper.log",
        "config_file": "/etc/glance/glance-reaper.conf"
      },
      "scrubber": {
        "verbose": false,
        "debug": false,
        "log_file": "/var/log/glance/scrubber.log",
        "config_file": "/etc/glance/glance-scrubber.conf"
      },
      "cache": {
        "verbose": false,
        "debug": false,
        "log_file": "/var/log/glance/scrubber.log",
        "config_file": "/etc/glance/glance-scrubber.conf"
      },
      "enable_caching": false,
      "use_cachemanagement": false,
      "image_cache_datadir": "/var/lib/glance/image-cache",
      "image_cache_stall_timeout": 86400,
      "image_cache_grace_period": 3600,
      "image_cache_max_size": 10737418240,
      "gitrepo": "http://github.com/openstack/glance.git",
      "git_instance": "",
      "git_refspec": "stable/grizzly",
      "use_gitrepo": false,
      "use_virtualenv": false,
      "use_pip_cache": false,
      "use_gitbarclamp": false,
      "pfs_deps": [
        "python-greenlet",
        "python-sqlalchemy",
        "python-anyjson",
        "python-eventlet",
        "python-pastedeploy",
        "python-routes",
        "python-webob",
        "python-boto",
        "python-migrate",
        "python-httplib2",
        "python-kombu",
        "python-crypto",
        "python-iso8601",
        "python-lxml",
        "python-paste",
        "python-passlib",
        "pip://wsgiref",
        "pip://argparse",
        "pip://jsonschema",
        "pip://warlock<2",
        "pip://python-swiftclient>=1,<2",
        "pip://python-glanceclient",
        "pip://python-keystoneclient>=0.2,<0.3"
      ],
      "use_syslog": false,
      "notifier_strategy": "noop",
      "default_store": "file",
      "filesystem_store_datadir": "/var/lib/glance/images",
      "swift_store_container": "glance",
      "pid_directory": "/var/run/glance",
      "working_directory": "/var/lib/glance",
      "sql_idle_timeout": 3600,
      "use_keystone": true,
      "keystone_instance": "none",
      "service_user": "glance",
      "database": "mysql",
      "mysql_instance": "none",
      "sqlite_connection": "sqlite:////var/lib/glance/glance.sqlite"
    }
  },
  "deployment": {
    "glance": {
      "crowbar-revision": 0,
      "element_states": {
        "glance-server": [ "readying", "ready", "applying" ]
      },
      "elements": {},
      "element_order": [
        [ "glance-server" ]
      ],
      "config": {
        "environment": "glance-base-config",
        "mode": "full",
        "transitions": false,
        "transition_list": [
        ]
      }
    }
  }
}
